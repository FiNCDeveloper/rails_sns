<!DOCTYPE html>
<html>
  <head>
    <title>Mysns</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="notice"><%= alert %></p>
      <h1><%= link_to "HOME", root_path %></h1>
      <% if user_signed_in? %>
      <p><%= link_to 'LOG OUT', destroy_user_session_path, method: :delete %></p>
      <% else %>
      <p>
        <%= link_to 'LOG IN', new_user_session_path %>
        <%= link_to 'SIGN UP', new_user_registration_path %>
      </p>
      <% end %>
      <% if user_signed_in? %>
      <p>ログイン中：<%= current_user.nickname %></p>
      <p>ID：<%= current_user.name %></p>
      <% end %>
      <% if user_signed_in? %>
      <h2><%= link_to 'Account Info', user_path(current_user.id) %></h2>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
