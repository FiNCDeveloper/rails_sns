<% if user_signed_in? %>
<ul class="nav nav-tabs" id="tabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="followingTab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">フォローしているユーザーのTweet</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="allTab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="true">全てのTweet</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent" >
  <div class="tab-pane show active" id="tab1" role="tabpanel" aria-labelledby="followingTab">
    <% if @following_tweets.any? %>
    <%= render :partial => "tweets", locals: { tweets: @following_tweets, favs: @following_favs } %>
    <% else %>
    ツイートがまだありません
    <% end %>
  </div>
  <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="allTab">
    <%= render :partial => "tweets", locals: { tweets: @tweets, favs: @favs } %>
  </div>
</div>

<% else %>
<h2>
  全てのTweet
</h2>
<%= render :partial => "tweets", locals: { tweets: @tweets, favs: @favs } %>
<% end %>
